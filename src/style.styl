@import '../node_modules/nib'

global-reset()

dark-gray = #222
light-gray = #eee
green-color = #3A814F
side-padding = 55px
top-padding = 100px

font-smoothing()
  vendor('font-smoothing', arguments)

bold()
  font-smoothing antialiased
  font-weight bold
  text-transform uppercase
  letter-spacing 1px

cursor-zoom()
  cursor -webkit-zoom-in
  cursor -moze-zoom-in

mask-repeat()
  vendor('mask-repeat', arguments)

mask-size()
  vendor('mask-size', arguments)

mask-image()
  vendor('mask-image', arguments)

html, body
  height 100%
#container
  min-height 100%

body, #header, .web-container.web-fixed .web-fg
  min-width 1020px

body
  font-smoothing antialiased
  font-family Helvetica, Arial, Serif
  color dark-gray
  font-size 15px
  background-size 70%
  line-height 1.4em
  &:before
    content '.'
    color transparent
    background white center center no-repeat
    background-image url('data:image/gif;base64,')
    width 100%
    height 100%
    margin auto
    position fixed
    top 0
    left 0
    display none
a
  color dark-gray
a, button
  outline none
*
  box-sizing border-box
img
  display block

section
  min-height 600px

body.body-init
  &:before
    display block
  #container
    opacity 0
  #home-down-arrow, #header
    opacity 0
#container
  transition opacity 0.5s ease-in-out
  background url('/images/brick.jpg')
  background-attachment fixed
#home-down-arrow
  transition opacity 1s ease-in 1s

#header
  background rgba(0,0,0,0.9)
  position fixed
  top 0
  left 0
  width 100%
  z-index 3
  opacity 0
  nav
    font-weight bold
    a
      color #555
      text-decoration none
      bold()
      display inline-block
      padding 17px
      padding-left 0
      font-size 13px
      transition color 0.2s, background-color 0.2s, border-color 0.2s
      &:hover, &:active
        color green-color
      &:nth-child(2), &:first-child
        padding-left 17px
      &.nav-active
        color green-color
      &:last-child
        border-left 1px solid #555
        padding-left 17px
    #home-icon
      color #eee
      border-right 1px solid #555
      &:hover, &:active
        background-color green-color
        color white
        border-color green-color
#home
  position relative
  #home-header
    text-align center
    position absolute
    top 50%
    margin-top -50px
    left 50%
    margin-left -100px
    width 200px
    height 100px

.logo
  cursor pointer
  h2, h1
    bold()
    text-transform lowercase
  h1
    display block
    font-size 40px
    letter-spacing 10px
  h2
    font-size 25px
    font-weight normal
    margin-top 15px
  .home-r
  .home-l
    color green-color
.video-portfolio .logo h2
  font-size 28px
  margin-left -4px
.video-portfolio #footer .logo h2
  font-size 23px

#home-down-arrow, #home-up-arrow
  border 2px solid dark-gray
  padding 20px
  margin auto
  display block
  background transparent
  position absolute
  top 90%
  left 50%
  margin-left -22px
  background url('images/scroll-arrow.svg') center center no-repeat
  background-size 60%
  cursor pointer

#home-up-arrow
  top -80px
  background-position-y 14px
  transform rotate(180deg)

.large-header
  background rgba(0,0,0,0.85)
  width 100%
  padding 150px 0
  text-align center
  position relative
  z-index 2
  .large-header-box
    margin auto
    border 3px solid light-gray
    color light-gray
    bold()
    letter-spacing 15px
    font-size 40px
    padding 50px 60px
    display inline-block
  .large-header-arrow-down
    width 0
    height 0
    border-left 30px solid transparent
    border-right 30px solid transparent
    border-top 20px solid rgba(0,0,0,0.85)
    position absolute
    left 50%
    margin-left -30px
    bottom -20px
    &.light-arrow
      border-top-color rgba(35,35,35,0.85)

.video
  position relative
  text-align center
  .video-copy-container
    width 505px
    position absolute
    top 50%
    margin-top -60px
    left 50%
    margin-left -260px
    z-index 2
    .video-play
      padding 25px
      border-radius @padding * 2
      border 2px solid white
      background url('images/play-arrow.svg') no-repeat 90% 50% transparent
      background-size 60%
      display inline-block
      margin-top 30px
      cursor pointer
      outline none
      opacity 0.8
      transition opacity 0.3s
      &:hover, &:active
        opacity 1
    p
      color white
      font-smoothing antialiased
      display inline-block
      text-align left
      line-height 1.8em
  .video-bg
    width 100%
    height 100%
    background center center no-repeat
    background-size cover
    position relative
    &::after
      content '.'
      background black
      opacity 0.5
      width 100%
      height 100%
      position absolute
      top 0
      left 0
  .video-player
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    background rgba(0,0,0,0.8)
    z-index 2
    display none

.white-bg
  background white
  width 100%
  padding  100px side-padding

.web-container
  position relative
  .web-images, .web-left-frame
    width 80%
  .web-left-frame
    float left
    position relative
  .web-images
    padding 2.7% 9.6% 21% 9.6%
    li
      width 100%
      img
        width 100%
  .web-left-macbook
    width 100%
  .web-overlay
    width 76%
    height 80%
    top 6%
    left 12%
    cursor-zoom()
    position absolute
  .web-right-copy
    float right
    width 20%
    padding 3% 0
    left -5%
    position relative
    line-height 1.2em
    background rgba(255,255,255,0.8)
    p
      font-size 13px
    h1
      bold()
      font-size 20px
      margin-bottom 10px
      line-height 1.2em
  .web-fg
    position absolute
    border-bottom solid white 2000px
    min-width 100%
  &.web-fixed
    .web-fg
      position fixed
      top 0
      left 0
      width 100%
      padding 0 side-padding
      border-top top-padding solid white
      &:after
        content '.'
        color transparent
        height 100%
        background white
  &.web-end
    .web-fg
      bottom 0
      border-bottom 0
      border-top top-padding solid white
      
.centered-header
  bold()
  padding 30px 0
  display block
  text-align center
  font-size 20px
  letter-spacing 2px

.two-divided-grid
  border-top 1px solid light-gray
  clearfix()
  margin-bottom 100px
  + .two-divided-grid
    margin-top -100px
  img
    cursor-zoom()
.two-divided-grid li
  padding 30px
  border-bottom 1px solid light-gray
  width 50%
  display block
  height 500px
  float left
  text-align center
  line-height @height
  &.two-grid-wide
    width 100%
    border-right 0 !important
    height auto
.two-divided-grid li:nth-child(2n+1)
  border-right 1px solid light-gray
.two-divided-grid img
  max-width 100%
  max-height 100%
  margin auto

.three-divided-grid
  margin-bottom 100px
  li
    width 33%
    display inline-block
    padding-right 20px
    img
      width 100% 
      cursor-zoom()

#footer-container
  position relative
#footer
  width 400px
  height 300px
  margin auto
  position absolute
  top 50%
  margin-top -150px
  left 50%
  margin-left -200px
  #download-resume
    background black
    color white
    bold()
    padding 15px
    width 100%
    display block
    margin-bottom 20px
    text-align center
    transition background-color 0.3s
    text-decoration none
    &:hover, &:active
      background green-color
  #contact-box
    padding 40px
    line-height 2em
    border 2px solid black
    clearfix()
    .contact-box-left
      width 50px
      float left
    .contact-box-right
      float left

.pv-video-full
  width 100%
  display block

.pv-two
  clearfix()
  background black
  img, video
    float left

.web-link
  color green-color
  margin 15px 0
  display block

#modal-container
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  z-index 4
  background black
  padding 0 90px
  text-align center
  overflow scroll
  display none
  #modal-close
    background url('images/close.svg') center center no-repeat
    background-size 50%
    position fixed
    z-index 5
    top 15px
    right @top + 15px
    padding 25px
    cursor pointer
    opacity 0.4
    transition opacity 0.3s 
    border 2px solid #eee
    &:hover, &:active
      opacity 1
  #modal
    background white
    display inline-block
    position relative
    img
      width 100%

#photo-video img
  cursor-zoom()

#footer .logo
  text-align center
  margin 40px 0
  h1
    font-size 30px
  h2
    font-size 20px
    margin-top 8px

// 
// Safari 5
// 
html.safari5
  #home-down-arrow
    padding 15px 20px !important
  .video-play
    padding 20px 26px !important


// 
// iPad
// 
html.ipad
  .web-fg
    border none !important
    position relative !important
  .web-right-copy p, .web-right-copy a, .brief
    font-size 24px !important
    line-height 1.4em !important
  .web-right-copy h1, .centered-header
    text-align center
    margin-bottom 30px
    font-size 28px
  .web-right-copy
    float none
    width 100%
    background transparent
    margin 0 45px 45px 45px
  .web-container
    position relative
    margin-bottom 50px
  .web-left-frame
    display none !important
  .web-images
    width 100%
    padding 0 !important
    li
      margin-top 50px
      padding-top @margin-top
      border-top 1px solid #ccc
      &:first-child
        margin-top 0
        padding-top 0
        border-top none
  #photo-video video
    display none !important
  .brief
    margin 0px 0 60px 0 !important
    width auto !important

// 
// iPhone
// 
#hamburger
  display none
html.iphone
  .slide-show-next, .slide-show-prev
    width 80px
  .slide-show
    height 300px
  #hamburger
    display block
    width 80px
    height 80px
    position fixed
    top 0
    left 0
    background black
    border-radius 1000px
    color white
    margin 10px
    font-size 40px !important
    text-align center
    line-height 80px
    z-index 10
  body, #header, .web-container.web-fixed .web-fg
    min-width 0 !important
    width 800px
  body
    font-size 30px !important
  .web-fg
    border none !important
    position relative !important
  .web-right-copy
    float none
    width 100%
    background transparent
    margin 0 30px 30px 30px
    p
      font-size 30px !important
      line-height 1.4em !important
    h1
      text-align center
      margin-bottom 30px
      font-size 40px
  .web-container
    position relative
    margin-bottom 50px
  .web-left-frame
    display none !important
  .web-images
    width 100%
    padding 0
    li
      margin-top 50px
      padding-top @margin-top
      border-top 1px solid #ccc
      &:first-child
        margin-top 0
        padding-top 0
        border-top none
  .video-copy-container
    top 20px !important
    left 20px !important
    margin-top 0 !important
    margin-left 0 !important
    width 100% !important
    padding 50px !important
  .video-player
    opacity 0 !important
  #photo-video
    .pv-two
      background transparent
    img, video
      width 100% !important
      display block
      margin 30px 0
    video
      height 400px !important
  #header
    display none
    opacity 1 !important
    background rgba(0,0,0,0.9)
    #home-icon
      display none
    nav 
      padding 5px 20px 20px 120px
      a
        font-size 40px !important
        display block
        padding 30px 0
        color white
        &:first-child
          padding-top 0
  .contact-box-left
    width 15px
  #footer-container
    height 1000px
    padding 50px 0
  #home
    min-height 400px
  #home-down-arrow
    display none
  #footer
    width 600px
    position relative
    top 100px !important
    left 0 !important
    margin 50px auto !important
  .slide-show-caption
    line-height 1.2em
    font-size 18px
    position relative
    top 20px
    padding 0px 80px

.slide-show
  position relative
  height 500px
  margin  50px 0 200px 0
  padding 0 50px
  cursor pointer
  > ul
    position relative
    display inline-block
    height 100%
    width 100%
    text-align center
  li
    height 100%
    width 100%
    opacity 0
    transition opacity 0.15s ease-out
    text-align center
    position absolute
    top 0
    left 0
    &.active
      opacity 1
      transition opacity 0.15s ease-in 0.15s
  img
    display inline-block
    max-height 100%
    max-width 100%
    position relative

.slide-show-next, .slide-show-prev
  height 100%
  width 80px
  border 0
  position absolute
  top 0
  z-index 2
  cursor pointer
  opacity 0.9
  transition background-color 0.5s
  background-size 40% !important
  &:hover, &:active
    background-color #ccc !important
    transition background-color 0.15s

.slide-show-next
  right 0
  background url('images/arrow-right.svg') no-repeat center center
  border-left 1px solid #ccc
.slide-show-prev
  left 0
  background url('images/arrow-left.svg') no-repeat center center
  border-right 1px solid #ccc

.slide-show-caption
  position absolute
  bottom 0
  font-size 13px
  text-align center
  width 100%
  color #333
  padding 0 25%

.brief
  width 600px
  margin 50px auto 100px auto
  font-size 16px
  line-height 1.7em

#home-page-h
  font-weight bold
  text-transform uppercase
  position absolute
  top 50%
  margin-top -54px
  font-size 22px
  letter-spacing 10px
  display block
  z-index 10
  text-align center
  width 100%
  h1
    display inline-block
    padding 30px 35px
    padding-right 24px
    border 4px solid
    background #fcfcfc

#home-page-right, #home-page-left
  a
    text-transform uppercase
    font-weight bold
    letter-spacing 20px
    text-decoration none
    position absolute
    font-size 40px
    text-align center
    color rgba(0,0,0,0.8)
    padding 14% 12%
    cursor pointer
    &:hover, &:active
      color white
      .home-page-bg
        z-index 1
        opacity 1
  .home-page-txt
    z-index 4
    position relative
    transition color 0s
  .home-page-bg
    width 100%
    height 100%
    opacity 0
    top 0
    left 0
    position fixed
    z-index -1
    &::before, &::after
      content '.'
      color transparent
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      z-index -1
    &::before
      background black
      opacity 0.7
    &::after
      z-index 1
      opacity 1

perc-off = 0

#home-page-right a
  right perc-off
  bottom @right
  .home-page-bg
    mask-image url(images/bg-triangle-right.png)
    mask-size 100% 100%
    background-size contain
    &::after
      background-image url(images/design-bg.jpg)
      background-position bottom right

#home-page-left a
  left perc-off
  top @left
  .home-page-bg
    mask-image url(images/bg-triangle-left.png)
    mask-size 100% 100%
    background-size contain
    &::after
      background-image url(images/video-bg.jpg)
      background-position top left

html.firefox
  #home-page-left, #home-page-right
    a
      color black
      &:hover
        color green-color
        .home-page-bg
          background-image none        

@media (max-width: 600px)
  #home-page-right a, #home-page-left a
    padding 50px 40px
    letter-spacing 10px
    font-size 24px
  #home-page-h h1
    padding 15px 25px
    font-size 12px
    letter-spacing 4px
  #home-page-h
    margin-top -30px
  .home-page-body-container
    background-size 100% !important

#home-page-line
  background url(images/bg-triangle-line.png)
  background-size 100% 100%
  width 100%
  height 100%
  position fixed
  top 0
  left 0

.pv-column
  width 50%
  display inline-block
  vertical-align top
  overflow hidden
  img
    width 100%