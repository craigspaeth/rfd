@import '../node_modules/nib'

global-reset()

dark-gray = #222
light-gray = #eee
green-color = #3A814F
side-padding = 55px
top-padding = 100px

font-smoothing()
  vendor('font-smoothing', arguments)

bold()
  font-smoothing antialiased
  font-weight bold
  text-transform uppercase
  letter-spacing 1px

body
  font-family Helvetica, Arial, Serif
  color dark-gray
  font-size 15px
  background-size 70%
  background-attachment fixed
  line-height 1.4em
  min-width 920px
  &:before
    content '.'
    color transparent
    background url('/images/ajax-loader.gif') white center center no-repeat
    width 100%
    height 100%
    margin auto
    position fixed
    top 0
    left 0
    display none
a
  color dark-gray
a, button
  outline none
*
  box-sizing border-box
img
  display block

body.body-init
  &:before
    display block
  #container
    opacity 0
  #home-down-arrow, #header
    opacity 0
#container
  transition opacity 0.5s ease-in-out
  background url('/images/brick.jpg')
#home-down-arrow
  transition opacity 1s ease-in 1s

#header
  background rgba(0,0,0,0.9)
  position fixed
  top 0
  left 0
  width 100%
  z-index 3
  opacity 0
  nav
    font-weight bold
    a
      color #555
      text-decoration none
      bold()
      display inline-block
      padding 17px
      padding-left 0
      font-size 13px
      transition color 0.2s
      &:nth-child(2), &:first-child
        padding-left 17px
      &.nav-active
        color green-color
    #home-icon
      color #eee
      border-right 1px solid #555
#home
  position relative
  #home-header
    text-align center
    position absolute
    top calc(50% - 50px)
    left calc(50% - 100px)
    width 200px
    height 100px
    h2, h1
      bold()
      text-transform lowercase
    h1
      display block
      font-size 40px
      letter-spacing 10px
    h2
      font-size 25px
      font-weight normal
      margin-top 15px
    .home-r
    .home-l
      color green-color
  #home-down-arrow
    border 2px solid dark-gray
    padding 20px
    margin auto
    display block
    background transparent
    position absolute
    top 90%
    left calc(50% - 20px)
    background url('images/scroll-arrow.svg') center center no-repeat
    background-size 60%
    cursor pointer

.large-header
  background rgba(0,0,0,0.85)
  width 100%
  padding 150px 0
  text-align center
  position relative
  z-index 2
  .large-header-box
    margin auto
    border 3px solid light-gray
    color light-gray
    bold()
    letter-spacing 15px
    font-size 40px
    padding 50px 60px
    display inline-block
  .large-header-arrow-down
    width 0
    height 0
    border-left 30px solid transparent
    border-right 30px solid transparent
    border-top 20px solid rgba(0,0,0,0.85)
    position absolute
    left calc(50% - 30px)
    bottom -20px
    &.light-arrow
      border-top-color rgba(35,35,35,0.85)

#campari-video
  position relative
  text-align center
  #campari-video-copy-container
    width 505px
    position absolute
    top calc(50% - 100px)
    left calc(50% - 250px)
    z-index 2
    #campari-video-play
      padding 25px
      border-radius @padding * 2
      border 2px solid white
      background url('images/play-arrow.svg') no-repeat 90% 50% transparent
      background-size 60%
      display inline-block
      margin-top 30px
      cursor pointer
      outline none
      opacity 0.8
      transition opacity 0.3s
      &:hover, &:active
        opacity 1
    p
      color white
      font-smoothing antialiased
      display inline-block
      text-align left
      line-height 1.8em
  #campari-video-bg
    background black
    img
      opacity 0.5
      width 100%
  #campari-video-player
    width 100%
    position absolute
    top 0
    left 0
    background rgba(0,0,0,0.8)
    z-index 2
    display none

.white-bg
  background white
  width 100%
  padding  100px side-padding

.web-container
  clearfix()
  position relative
  margin-bottom 200px
  .web-images
  .web-left-frame
    width 80%
  .web-left-frame
    float left
    position relative
  .web-images
    overflow hidden
    padding 2.7% 9.6% 21% 9.6%
    li
      width 100%
      img
        width 100%
  .web-left-macbook
    width 100%
    top 0
    left 0
    border-bottom 9999px solid white
  .web-right-copy
    float right
    width 20%
    padding 3% 0
    left -5%
    position relative
    line-height 1.2em
    p
      font-size 13px
    h1
      bold()
      font-size 20px
      margin-bottom 10px
      line-height 1.2em
  .web-fg
    height 500px
    position absolute
  &.web-fixed
    .web-fg
      position fixed
      top 0
      left 0
      width 100%
      padding top-padding side-padding
    .web-left-macbook
      border-top 50px solid white
      position absolute
      top -50px
    .web-right-copy
      border-bottom 2000px solid white
      z-index -1
  &.web-end
    .web-fg
      bottom 0
      position absolute
    .web-left-macbook
      border-bottom 0
      border-top 1000px solid white
      top -1000px
      position absolute

.centered-header
  bold()
  padding 30px 0
  display block
  text-align center
  font-size 20px
  letter-spacing 2px

.two-divided-grid
  border-top 1px solid light-gray
  clearfix()
  margin-bottom 100px
  + .two-divided-grid
    margin-top -100px
.two-divided-grid li
  padding 30px
  border-bottom 1px solid light-gray
  width 50%
  display block
  height 500px
  float left
  text-align center
  line-height @height
  &.two-grid-wide
    width 100%
    border-right 0 !important
    height auto
.two-divided-grid li:nth-child(2n+1)
  border-right 1px solid light-gray
.two-divided-grid img
  max-width 100%
  max-height 100%
  margin auto

#footer-container
  position relative
#footer
  width 400px
  height 300px
  margin auto
  position absolute
  top calc(50% - 150px)
  left calc(50% - 200px)
  #download-resume
    background black
    color white
    bold()
    padding 15px
    width 100%
    display block
    margin-bottom 20px
    text-align center
    transition background-color 0.3s
    text-decoration none
    &:hover, &:active
      background green-color
  #contact-box
    padding 40px
    line-height 2em
    border 2px solid black
    clearfix()
    .contact-box-left
      width 50px
      float left
    .contact-box-right
      float left

.pv-video-full
  width 100%
  display block

.pv-two
  clearfix()
  background black
  img, video
    float left

.web-link
  color green-color
  margin 15px 0
  display block