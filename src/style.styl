@import '../node_modules/nib'

global-reset()

dark-gray = #222
light-gray = #eee
green-color = #3A814F
side-padding = 55px
top-padding = 100px

font-smoothing()
  vendor('font-smoothing', arguments)

bold()
  font-smoothing antialiased
  font-weight bold
  text-transform uppercase
  letter-spacing 1px

cursor-zoom()
  cursor -webkit-zoom-in
  cursor -moze-zoom-in

body, #header, .web-container.web-fixed .web-fg
  min-width 1020px

body
  font-family Helvetica, Arial, Serif
  color dark-gray
  font-size 15px
  background-size 70%
  line-height 1.4em
  &:before
    content '.'
    color transparent
    background white center center no-repeat
    background-image url('data:image/gif;base64,')
    width 100%
    height 100%
    margin auto
    position fixed
    top 0
    left 0
    display none
a
  color dark-gray
a, button
  outline none
*
  box-sizing border-box
img
  display block

body.body-init
  &:before
    display block
  #container
    opacity 0
  #home-down-arrow, #header
    opacity 0
#container
  transition opacity 0.5s ease-in-out
  background url('/images/brick.jpg')
  background-attachment fixed
#home-down-arrow
  transition opacity 1s ease-in 1s

#header
  background rgba(0,0,0,0.9)
  position fixed
  top 0
  left 0
  width 100%
  z-index 3
  opacity 0
  nav
    font-weight bold
    a
      color #555
      text-decoration none
      bold()
      display inline-block
      padding 17px
      padding-left 0
      font-size 13px
      transition color 0.2s, background-color 0.2s, border-color 0.2s
      &:hover, &:active
        color green-color
      &:nth-child(2), &:first-child
        padding-left 17px
      &.nav-active
        color green-color
    #home-icon
      color #eee
      border-right 1px solid #555
      &:hover, &:active
        background-color green-color
        color white
        border-color green-color
#home
  position relative
  #home-header
    text-align center
    position absolute
    top 50%
    margin-top -50px
    left 50%
    margin-left -100px
    width 200px
    height 100px

.logo
  h2, h1
    bold()
    text-transform lowercase
  h1
    display block
    font-size 40px
    letter-spacing 10px
  h2
    font-size 25px
    font-weight normal
    margin-top 15px
  .home-r
  .home-l
    color green-color

#home-down-arrow, #home-up-arrow
  border 2px solid dark-gray
  padding 20px
  margin auto
  display block
  background transparent
  position absolute
  top 90%
  left 50%
  margin-left -22px
  background url('images/scroll-arrow.svg') center center no-repeat
  background-size 60%
  cursor pointer

#home-up-arrow
  top -80px
  background-position-y 14px
  transform rotate(180deg)

.large-header
  background rgba(0,0,0,0.85)
  width 100%
  padding 150px 0
  text-align center
  position relative
  z-index 2
  .large-header-box
    margin auto
    border 3px solid light-gray
    color light-gray
    bold()
    letter-spacing 15px
    font-size 40px
    padding 50px 60px
    display inline-block
  .large-header-arrow-down
    width 0
    height 0
    border-left 30px solid transparent
    border-right 30px solid transparent
    border-top 20px solid rgba(0,0,0,0.85)
    position absolute
    left 50%
    margin-left -30px
    bottom -20px
    &.light-arrow
      border-top-color rgba(35,35,35,0.85)

#campari-video
  position relative
  text-align center
  #campari-video-copy-container
    width 505px
    position absolute
    top 50%
    margin-top -100px
    left 50%
    margin-left -250px
    z-index 2
    #campari-video-play
      padding 25px
      border-radius @padding * 2
      border 2px solid white
      background url('images/play-arrow.svg') no-repeat 90% 50% transparent
      background-size 60%
      display inline-block
      margin-top 30px
      cursor pointer
      outline none
      opacity 0.8
      transition opacity 0.3s
      &:hover, &:active
        opacity 1
    p
      color white
      font-smoothing antialiased
      display inline-block
      text-align left
      line-height 1.8em
  #campari-video-bg
    background black
    img
      opacity 0.5
      width 100%
  #campari-video-player
    width 100%
    position absolute
    top 0
    left 0
    background rgba(0,0,0,0.8)
    z-index 2
    display none

.white-bg
  background white
  width 100%
  padding  100px side-padding

.web-container
  position relative
  .web-images, .web-left-frame
    width 80%
  .web-left-frame
    float left
    position relative
  .web-images
    padding 2.7% 9.6% 21% 9.6%
    li
      width 100%
      img
        width 100%
  .web-left-macbook
    width 100%
  .web-overlay
    width 76%
    height 80%
    top 6%
    left 12%
    cursor-zoom()
    position absolute
  .web-right-copy
    float right
    width 20%
    padding 3% 0
    left -5%
    position relative
    line-height 1.2em
    background rgba(255,255,255,0.8)
    p
      font-size 13px
    h1
      bold()
      font-size 20px
      margin-bottom 10px
      line-height 1.2em
  .web-fg
    position absolute
    border-bottom solid white 2000px
  &.web-fixed
    .web-fg
      position fixed
      top 0
      left 0
      width 100%
      padding 0 side-padding
      border-top top-padding solid white
      &:after
        content '.'
        color transparent
        height 100%
        background white
  &.web-end
    .web-fg
      bottom 0
      border-bottom 0
      border-top top-padding solid white
      
.centered-header
  bold()
  padding 30px 0
  display block
  text-align center
  font-size 20px
  letter-spacing 2px

.two-divided-grid
  border-top 1px solid light-gray
  clearfix()
  margin-bottom 100px
  + .two-divided-grid
    margin-top -100px
  img
    cursor-zoom()
.two-divided-grid li
  padding 30px
  border-bottom 1px solid light-gray
  width 50%
  display block
  height 500px
  float left
  text-align center
  line-height @height
  &.two-grid-wide
    width 100%
    border-right 0 !important
    height auto
.two-divided-grid li:nth-child(2n+1)
  border-right 1px solid light-gray
.two-divided-grid img
  max-width 100%
  max-height 100%
  margin auto

#footer-container
  position relative
#footer
  width 400px
  height 300px
  margin auto
  position absolute
  top 50%
  margin-top -150px
  left 50%
  margin-left -200px
  #download-resume
    background black
    color white
    bold()
    padding 15px
    width 100%
    display block
    margin-bottom 20px
    text-align center
    transition background-color 0.3s
    text-decoration none
    &:hover, &:active
      background green-color
  #contact-box
    padding 40px
    line-height 2em
    border 2px solid black
    clearfix()
    .contact-box-left
      width 50px
      float left
    .contact-box-right
      float left

.pv-video-full
  width 100%
  display block

.pv-two
  clearfix()
  background black
  img, video
    float left

.web-link
  color green-color
  margin 15px 0
  display block

#modal-container
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  z-index 4
  background black
  padding 0 90px
  text-align center
  overflow scroll
  display none
  #modal-close
    background url('images/close.svg') center center no-repeat
    background-size 50%
    position fixed
    z-index 5
    top 15px
    right @top
    padding 25px
    cursor pointer
    opacity 0.4
    transition opacity 0.3s 
    border 2px solid #eee
    &:hover, &:active
      opacity 1
  #modal
    background white
    display inline-block
    position relative
    img
      width 100%

#photo-video img
  cursor-zoom()

#footer .logo
  text-align center
  margin 40px 0
  h1
    font-size 30px
  h2
    font-size 20px
    margin-top 8px

// 
// Safari 5
// 
html.safari5
  #home-down-arrow
    padding 15px 20px !important
  #campari-video-play
    padding 20px 26px !important


// 
// iPhone
// 
#hamburger
  display none
html.iphone
  #hamburger
    display block
    width 80px
    height 80px
    position fixed
    top 0
    left 0
    background black
    border-radius 1000px
    color white
    margin 10px
    font-size 40px !important
    text-align center
    line-height 80px
    z-index 10
  body, #header, .web-container.web-fixed .web-fg
    min-width 0 !important
    width 800px
  body
    font-size 21px !important
  .web-fg
    border none !important
    position relative !important
  .web-right-copy
    float none
    width 100%
    background transparent
    margin 0 30px 30px 30px
    h1
      text-align center
      margin-bottom 30px
      font-size 25px
  .web-container
    position relative
    margin-bottom 50px
  .web-left-frame
    display none !important
  .web-images
    width 100%
    padding 0
    li
      margin-top 50px
      padding-top @margin-top
      border-top 1px solid #ccc
      &:first-child
        margin-top 0
        padding-top 0
        border-top none
  #campari-video-player
    opacity 0 !important
  #photo-video
    .pv-two
      background transparent
    img, video
      width 100% !important
      display block
      margin 30px 0
    video
      height 400px !important
  #header
    display none
    opacity 1 !important
    background rgba(0,0,0,0.9)
    #home-icon
      display none
    nav 
      padding 5px 20px 20px 120px
      a
        font-size 40px !important
        display block
        padding 30px 0
        color white
        &:first-child
          padding-top 0