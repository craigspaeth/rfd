mixin large-header(title, light)
  h3.large-header
    .large-header-box= title
    .large-header-arrow-down( class=( light ? 'light-arrow' : '' ) )

mixin web-container(title, imgPrefix, copy)
  .web-container
    .web-fg
      .web-left-frame
        img.web-left-macbook( src='/images/macbook.png' )
      .web-right-copy
        h1= title
        p= copy
    ul.web-images
      for i in [1,2,3]
        li
          img( src="/images/#{imgPrefix}#{i}.png" )

